<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="iuriaraujocs_customer" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Customer Registration</label>
            <tab>iuriaraujocs</tab>
            <resource>Iuriaraujocs_Customer::admin</resource>
            <group id="default" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Custom Attribute Rules</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>With this option enabled, logs will be generated and custom e-mail will be sent.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
